{
  "name": "the-circles-king",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:server dev:client",
    "dev:server": "npm --workspace @tck/server run dev",
    "dev:client": "npm --workspace @tck/client run dev",
    "build": "npm-run-all -s build:*",
    "build:shared": "npm --workspace @tck/shared run build",
    "build:server": "npm --workspace @tck/server run build",
    "build:client": "npm --workspace @tck/client run build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  }
}
